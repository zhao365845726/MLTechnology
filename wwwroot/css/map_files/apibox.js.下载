    window.onload = function(){
	var apiNav = document.createElement("div")
	document.body.appendChild(apiNav)
	apiNav.id="otherApiBox"
	apiNav.innerHTML = '<div class="bg" id="apiBoxBg"></div><div class="conn" id="apiBoxCon"><div class="tit">切换产品<span class="down">▼</span></div><table><tr><td><a href="/wiki/map/">百度地图API</a></td></tr><tr><td><a href="/wiki/imap/">百度地图手机API</a></td></tr><tr><td><a href="/wiki/flashapi/">百度地图Flash API</a></td></tr><tr><td style="text-align:right; width:120px;"><a href="/wiki/">更多产品<span class="more">&gt;&gt;</span></a></td></tr></table></div>'
   	function _get(obj){return document.getElementById(obj)};
		_get("apiBoxBg").style.height = "143px"//设置弹出层的高度；
	   _get("apiBoxCon").style.height = parseInt(_get("apiBoxBg").style.height) - 30 +"px";
	   
		//console.log(_get('apiBoxCon').offsetHeight + "px")
		// = _get('apiBoxBg').offsetHeight
		var navName = _get("wiki_nav").getElementsByTagName("li")
		for(var i=0;i<navName.length;i++){
			if(navName[i].className != "nav_sel"){
				navName[i].onmouseover = function(){
					this.className = "nav_sel";
					}
				navName[i].onmouseout = function(){
					this.className = "";
					}}
			}
			function offsetL(obj){
				obj = document.getElementById(obj);
				var left = obj.offsetLeft;
				var  current  =  obj.offsetParent;
				while (current !== null) {
		　　　　　 　left  +=  current.offsetLeft;
		　　　　　 　current  =  current.offsetParent;
				}
				return left;
			}
			function offsetT(obj){
				obj = document.getElementById(obj);
				var top = obj.offsetTop;
				var  current  =  obj.offsetParent;
				while (current !== null) {
		　　　　　 　top  +=  current.offsetTop;
		　　　　　 　current  =  current.offsetParent;
				}
				return top;
			}
			function stopBubble(e) {
				//如果提供了事件对象，则这是一个非IE浏览器
				if ( e && e.stopPropagation )
				//因此它支持W3C的 stopPropagation()方法
				e.stopPropagation();
				else
				//否则，我们需要使用IE的方式来取消事件冒泡
				window.event.cancelBubble = true;
			}
		_get("otherApi").onmouseover = function(e){
				stopBubble(e);
				_get("otherApi").firstChild.style.display = "none";
				_get("otherApiBox").style.display = "block";
				_get("otherApiBox").style.left = offsetL("otherApi") - 15 + "px";
				_get("otherApiBox").style.top = offsetT("otherApi") - 19 + "px";
			}
		_get("otherApiBox").onmouseover = function(e){stopBubble(e);}
		document.body.onmouseover = function(e){
				_get("otherApi").firstChild.style.display = ""
				_get("otherApiBox").style.display = "none";
			}

}

